{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  description: "Automated dependency updates for authentik-webfinger-proxy",
  extends: [
    "config:recommended",
    "docker:enableMajor",
    "replacements:k8s-registry-move",
    ":automergePr",
    ":automergePatch",
    ":automergeDigest",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":timezone(Europe/London)",
    "github>sudo-kraken/authentik-webfinger-proxy//.github/renovate/labels.json5",
    "github>sudo-kraken/authentik-webfinger-proxy//.github/renovate/docker.json5",
    "github>sudo-kraken/authentik-webfinger-proxy//.github/renovate/python.json5",
    "github>sudo-kraken/authentik-webfinger-proxy//.github/renovate/devcontainers.json5",
    "github>sudo-kraken/authentik-webfinger-proxy//.github/renovate/semantic_commits.json5",
  ],
  dependencyDashboardTitle: "Renovate Dashboard ðŸ¤–",
  suppressNotifications: ["prEditedNotification", "prIgnoreNotification"],
  rebaseWhen: "conflicted",
  prConcurrentLimit: 5,
  labels: ["dependencies"],
  minimumReleaseAge: "7 days",

packageRules: [
    {
      description: "Fast track security advisories",
      isVulnerabilityAlert: true,
      force: {
        minimumReleaseAge: null,
        prCreation: "immediate"
      }
    },
    {
      description: "Do not delay GitHub Actions updates",
      matchManagers: ["github-actions"],
      minimumReleaseAge: null
    }
  ]  
}
